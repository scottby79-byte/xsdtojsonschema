{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Root Schema for http://example.com/tests",
    "$id": "http://example.com/tests/document.json",
    "oneOf": [
        {
            "type": "object",
            "properties": {
                "CommandeRoot": {
                    "$ref": "#/definitions/T_Commande"
                }
            },
            "required": [
                "CommandeRoot"
            ]
        },
        {
            "type": "object",
            "properties": {
                "ClientDocument": {
                    "$ref": "#/definitions/T_DocumentAvecClient"
                }
            },
            "required": [
                "ClientDocument"
            ]
        }
    ],
    "definitions": {
        "T_NiveauPriorite": {
            "type": "integer",
            "enum": [
                1,
                2
            ],
            "minimum": 0,
            "maximum": 5
        },
        "group_G_InformationsBase": {
            "type": "object",
            "properties": {
                "dateCreation": {
                    "type": "string"
                },
                "priorite": {
                    "$ref": "#/definitions/T_NiveauPriorite"
                }
            },
            "required": [
                "dateCreation"
            ]
        },
        "T_Article": {
            "type": "object",
            "properties": {
                "reference": {
                    "type": "string"
                },
                "commentaire": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "maxItems": 5
                },
                "quantite": {
                    "type": "integer"
                }
            },
            "required": [
                "quantite",
                "reference"
            ]
        },
        "T_CodePostal": {
            "type": "string",
            "pattern": "[0-9]{5}",
            "minLength": 5,
            "maxLength": 5
        },
        "group_G_ModePaiement": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "carte": {
                            "$ref": "#/definitions/T_CodePostal"
                        }
                    },
                    "required": [
                        "carte"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "virement": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "virement"
                    ]
                }
            ]
        },
        "T_Commande": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "dateCreation": {
                            "type": "string"
                        },
                        "priorite": {
                            "$ref": "#/definitions/T_NiveauPriorite"
                        },
                        "produitSimple": {
                            "type": "string"
                        },
                        "carte": {
                            "$ref": "#/definitions/T_CodePostal"
                        }
                    },
                    "required": [
                        "dateCreation",
                        "produitSimple",
                        "carte"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "dateCreation": {
                            "type": "string"
                        },
                        "priorite": {
                            "$ref": "#/definitions/T_NiveauPriorite"
                        },
                        "produitSimple": {
                            "type": "string"
                        },
                        "virement": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "dateCreation",
                        "produitSimple",
                        "virement"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "dateCreation": {
                            "type": "string"
                        },
                        "priorite": {
                            "$ref": "#/definitions/T_NiveauPriorite"
                        },
                        "ligneArticle": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/T_Article"
                            },
                            "minItems": 1
                        },
                        "taxe": {
                            "type": "number"
                        },
                        "carte": {
                            "$ref": "#/definitions/T_CodePostal"
                        }
                    },
                    "required": [
                        "dateCreation",
                        "ligneArticle",
                        "carte"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "dateCreation": {
                            "type": "string"
                        },
                        "priorite": {
                            "$ref": "#/definitions/T_NiveauPriorite"
                        },
                        "ligneArticle": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/T_Article"
                            },
                            "minItems": 1
                        },
                        "taxe": {
                            "type": "number"
                        },
                        "virement": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "dateCreation",
                        "ligneArticle",
                        "virement"
                    ]
                }
            ]
        },
        "T_DocumentBase": {
            "type": "object",
            "properties": {
                "dateCreation": {
                    "type": "string"
                },
                "priorite": {
                    "$ref": "#/definitions/T_NiveauPriorite"
                },
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "number",
                    "default": 1.0
                }
            },
            "required": [
                "dateCreation",
                "id"
            ]
        },
        "T_Adresse": {
            "type": "object",
            "properties": {
                "rue": {
                    "type": "string"
                },
                "ville": {
                    "type": "string"
                },
                "codePostal": {
                    "$ref": "#/definitions/T_CodePostal"
                }
            },
            "required": [
                "codePostal",
                "rue",
                "ville"
            ]
        },
        "T_DocumentAvecClient": {
            "type": "object",
            "properties": {
                "dateCreation": {
                    "type": "string"
                },
                "priorite": {
                    "$ref": "#/definitions/T_NiveauPriorite"
                },
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "number",
                    "default": 1.0
                },
                "nomClient": {
                    "type": "string"
                },
                "adresseLivraison": {
                    "$ref": "#/definitions/T_Adresse"
                },
                "statut": {
                    "type": "string"
                }
            },
            "required": [
                "dateCreation",
                "id",
                "nomClient"
            ]
        }
    }
}