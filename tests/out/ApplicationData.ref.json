{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for ApplicationData",
    "$id": "http://example.com/root/ApplicationData.json",
    "type": "object",
    "properties": {
        "ApplicationData": {
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
                },
                "RootID": {
                    "$ref": "#/definitions/UUIDType"
                },
                "MainAddress": {
                    "$ref": "#/definitions/AddressType"
                },
                "ProductCatalog": {
                    "$ref": "#/definitions/ProductCatalogType"
                }
            },
            "required": [
                "MainAddress",
                "Name",
                "ProductCatalog",
                "RootID"
            ]
        }
    },
    "required": [
        "ApplicationData"
    ],
    "definitions": {
        "UUIDType": {
            "type": "string",
            "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
            "description": "format UUIDType"
        },
        "AddressType": {
            "type": "object",
            "properties": {
                "Street": {
                    "type": "string"
                },
                "City": {
                    "type": "string"
                },
                "Zip": {
                    "type": "string"
                }
            },
            "required": [
                "City",
                "Street",
                "Zip"
            ]
        },
        "ProductType": {
            "type": "object",
            "properties": {
                "ProductID": {
                    "type": "string"
                },
                "ProductName": {
                    "type": "string"
                },
                "Price": {
                    "type": "number"
                },
                "isForSale": {
                    "type": "boolean"
                }
            },
            "required": [
                "Price",
                "ProductID",
                "ProductName",
                "isForSale"
            ]
        },
        "ProductCatalogType": {
            "type": "object",
            "properties": {
                "referenced": {
                    "type": "boolean"
                },
                "Product": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ProductType"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "Product",
                "referenced"
            ]
        }
    }
}